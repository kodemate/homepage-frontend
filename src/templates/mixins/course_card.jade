mixin course_card(title, price, date, image_url, summary, url)
    .courses--card
        .courses--card__price
            span.text Giá
            span.price #{price}
        .courses--card__title
            h4 #{title}
        .courses--card__date
            span.date Ngày khai giảng: #{date}
        .courses--card__image
            img(src="#{image_url}", alt="", class="img-responsive")
        .courses--card__summary
            p #{summary}
        .courses--card__actions
            a(class="btn btn-danger", href=url) Chi tiết
            a(class="btn btn-danger", href=url) Đăng kí