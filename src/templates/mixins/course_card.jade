mixin course_card(title, price, date, image_url, summary, url)
    .course--card
        .course--card__price
            span.text Giá:
            span.price #{price}
        .course--card__title
            h4 #{title}
        .course--card__date
            span.text Ngày khai giảng:
            span.date #{date}
        .course--card__image
            img(src="#{image_url}", alt="", class="img-responsive")
        .course--card__summary
            p #{summary}
        .course--card__actions
            a(class="btn btn-info", href=url) Chi tiết
            a(class="btn btn-danger", href=url) Đăng kí