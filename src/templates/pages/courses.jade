extends ../layouts/master.jade

block title
    title KodeMate - Course Listing

block prepend css
    link(rel="stylesheet", href="css/courses.css")

block content
    include ../components/meta.jade
    include ../components/navbar.jade

    include ../mixins/header
    +header('Danh sách khoá học', 'Tổng hợp các khoá học được tổ chức tại KodeMate.')


    section#block-available
        .container
            .row
                .col-md-12
                    h2 Các khoá học đang tuyển sinh
                    p Hàng tháng các khoá học mới sẽ được mở lớp và các bạn có thể đăng kí các khoá học này.

            .row
                include ../mixins/course_card
                .col-md-4
                    +course_card('Nhập môn lập trình web với HTML/CSS', '800,000 VND', '15/08/2016', 'http://placehold.it/400x250', 'Học lập trình web một cách chuyên nghiệp', 'course.html')
                .col-md-4
                    +course_card('Lập trình web với PHP/Laravel', '1.800,000 VND', '15/08/2016', 'http://placehold.it/400x250', 'Học lập trình web PHP một cách chuyên nghiệp', 'course.html')
                .col-md-4
                    +course_card('Nhập môn lập trình web với HTML/CSS', '800,000 VND', '15/08/2016', 'http://placehold.it/400x250', 'Học lập trình web một cách chuyên nghiệp', 'course.html')

    section#block-coming-soon
        .container
            .row
                .col-md-12
                    h2 Các khoá học sẽ được tổ chức
                    p Đây là danh sách các khoá học dự kiến sẽ được tổ chức. Tuy nhiên, các bạn cũng có thể gửi yêu cầu tổ chức một khoá học dành cho nhóm của bạn.

            .row
                include ../mixins/course_card
                .col-md-4
                    +course_card('Nhập môn lập trình web với HTML/CSS', '800,000 VND', '15/08/2016', 'http://placehold.it/400x250', 'Học lập trình web một cách chuyên nghiệp', 'course.html')
                .col-md-4
                    +course_card('Lập trình web với PHP/Laravel', '1.800,000 VND', '15/08/2016', 'http://placehold.it/400x250', 'Học lập trình web PHP một cách chuyên nghiệp', 'course.html')
                .col-md-4
                    +course_card('Nhập môn lập trình web với HTML/CSS', '800,000 VND', '15/08/2016', 'http://placehold.it/400x250', 'Học lập trình web một cách chuyên nghiệp', 'course.html')

    include ../components/footer.jade
